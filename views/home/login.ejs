<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body style="background-color: #FFCD1D;>
    <%- include('../partials/nav') %>

    <div class="container">

      <h3 class="mb-3" style="margin-top: 30px; font-family: Roboto; font-size: 30px; font-weight: 700;">로그인</h3>

      <form class="user-form" action="/login" method="post">

        <div class="form-group row">
          <label  style="font-weight: 700;" for="username" class="col-sm-3 col-form-label">아이디</label>
          <div class="col-sm-9">
            <input style= "width: 400px; border-radius: 0; background-color: #FFCD1D; border-top: none; border-left: none; border-right: none; border-bottom:2px solid black;" type="text" id="username" name="username" value="<%= username %>" class="form-control <%= (errors.username)?'is-invalid':'' %>">
            <% if(errors.username){ %>
              <span class="invalid-feedback"><%= errors.username %></span>
            <% } %>
          </div>
        </div>

        <div class="form-group row">
          <label style="font-weight: 700;" for="password" class="col-sm-3 col-form-label">비밀번호</label>
          <div class="col-sm-9">
            <input style= "width: 400px; border-radius: 0; background-color: #FFCD1D; border-top: none; border-left: none; border-right: none; border-bottom:2px solid black;" type="password" id="password" name="password" value="" class="form-control <%= (errors.password)?'is-invalid':'' %>">
            <% if(errors.password){ %>
              <span class="invalid-feedback"><%= errors.password %></span>
            <% } %>
          </div>
        </div>

        <% if(errors.login){ %>
          <div class="invalid-feedback d-block"><%= errors.login %></div>
        <% } %>

        <div class="mt-3">
          <input style="background-color: black; color: white; border: none;" class="btn btn-primary" type="submit" value="로그인">
        </div>

      </form>

    </div>
  </body>
</html>
